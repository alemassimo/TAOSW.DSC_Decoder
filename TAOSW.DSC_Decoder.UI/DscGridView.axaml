<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TAOSW.DSC_Decoder.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TAOSW.DSC_Decoder.UI.DscGridView"
             x:DataType="local:DscMessagesViewModel"
             >
  <UserControl.Resources>
    <local:CategoryToColorConverter x:Key="CategoryToColorConverter"/>
  </UserControl.Resources>
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Label Content="DSC Messages" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
    <DataGrid x:Name="MessagesDataGrid" Grid.Row="1" ItemsSource="{Binding Messages}" AutoGenerateColumns="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Time" Binding="{Binding Time}" />
        <DataGridTemplateColumn Header="Category">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Border Background="{Binding Category, Converter={StaticResource CategoryToColorConverter}}" 
                      Padding="5" 
                      CornerRadius="3"
                      BorderBrush="Gray" 
                      BorderThickness="1">
                <TextBlock Text="{Binding Category}" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
              </Border>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" />
        <DataGridTextColumn Header="Format" Binding="{Binding Format}" />
        <DataGridTextColumn Header="NatureDescription" Binding="{Binding NatureDescription}" />
        <DataGridTextColumn Header="From" Binding="{Binding From}" />
        <DataGridTextColumn Header="To" Binding="{Binding To}" />
        <DataGridTextColumn Header="TC1" Binding="{Binding TC1}" />
        <DataGridTextColumn Header="TC2" Binding="{Binding TC2}" />
        <DataGridTextColumn Header="Position" Binding="{Binding Position}" />
        <DataGridTextColumn Header="EOS" Binding="{Binding EOS}" />
        <DataGridTextColumn Header="CECC" Binding="{Binding CECC}" />
        <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
        
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
